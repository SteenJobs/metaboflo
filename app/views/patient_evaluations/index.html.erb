<h1>All Patient Evaluations for Patient '<%= @patient.code %>'</h1>

<table class="list">
	<tr>
		<th>Diagnosis</th>
		<th>Evaluation Date</th>
		<th colspan="3">Actions</th>
	</tr>

	<% for patient_evaluation in @patient_evaluations %>
	<tr class="<%= cycle('odd', 'even') %>">
		<td><%=h patient_evaluation.diagnosis %></td>
		<td><%=h patient_evaluation.evaluated_on %></td>
		<td><%= show_link patient_patient_evaluation_path(@patient, patient_evaluation) %></td>
		<td><%= edit_link edit_patient_patient_evaluation_path(@patient, patient_evaluation) %></td>
		<td><%= destroy_link patient_patient_evaluation_path(@patient, patient_evaluation) %></td>
	</tr>
	<% end %>
</table>

<br />

<%= new_link 'patient evaluation', new_patient_patient_evaluation_path(@patient) %>
