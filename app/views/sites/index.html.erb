<h1>All Sites</h1>

<table class="list">
  <tr>
    <th>Name</th>
	<th># of Users</th>
	<th colspan="3">Actions</th>
  </tr>

<% for site in @sites %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%=h site.name %></td>
	<% if site.users %>
		<td><%= link_to site.users.length, site_users_path(site) %></td>
	<% else %>
		<td>0</td>
	<% end %>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New site', new_site_path, :class => 'icon icon-add' %>
