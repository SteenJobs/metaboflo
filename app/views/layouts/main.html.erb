<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	<title><%= controller.controller_name %>: <%= controller.action_name %></title>
	<%= stylesheet_link_tag 'yui' %>
	<%= stylesheet_link_tag 'application' %>

	<%= stylesheet_link_tag 'tree' %>
	<%= javascript_include_tag 'tree' %>

	<%= javascript_include_tag :defaults %>
</head>
<body>
	<% sidebar = !@patient.nil? && !@patient.new_record? %>
	
	<div id="doc3" <%= 'class="yui-t3"' if sidebar %>> 
		<div id="hd"><!-- header -->
			
			<div id="headerbar">
				<%= image_tag 'dna_blend.png', :style => 'padding: 0em; float: right;' %>
				<div style="margin-top: 1em; float: right; color: silver; font-size: smaller; text-align: right;">
					<span style="color: silver; font-size: smaller">Version 0.1 Beta</span>
					<br />
					<% if current_user %>
					<form action="">
						Quick Search: <input type="text" />
						<input type="submit" value="Go" />
					</form>
					<% end %>
				</div>

				<%= image_tag 'duke_logo.png', :style => 'padding: 1em; float: left;' %>
				<%= image_tag 'title.png', :style => 'padding-left: 1em; float: left;' %>
			</div>

			<% if current_user %>
			<div id="menu">
				<%= link_to 'HMDB', 'http://hmdb.ca', :style => "float: right" %> 
				<%= link_to 'Drugbank', 'http://drugbank.ca', :style => "float: right" %> 
				<%= link_to 'Metabo-Analyst', 'http://www.hmdb.ca', :style => "float: right" %> 
				
				<%= link_to 'Patients', patients_path %> 
				<%= link_to 'Samples', samples_url %> 
				<%= link_to 'Experiments', experiments_path %> 
				<%= link_to 'Cohorts', patient_cohorts_path %> 
				<%= link_to 'Protocols', protocols_path %> 
				<%= link_to 'Administration', admin_path %>

				<%= link_to 'Logout', logout_path %>
			</div>
			<% end %>

		</div>  
		
		<div id="bd"><!-- body -->
			
			<div class="yui-b"><!-- Navigation block -->
				<% if sidebar -%>
				<div id="sidebar">
					<h2>Patient Summary</h2>
					<%= patient_tree(@patient) %>
				</div>
				<% end %>
			</div>

			<div id="yui-main"><!-- Main content block -->
				<div class="yui-b">
					<div id="main">
						<div id="flash">
							<% if flash[:notice] %><p class="notice"><%= flash[:notice] %></p><% end %>
							<% if flash[:error] %><p class="error"><%= flash[:error] %></p><% end %>
						</div>

						<%= yield  %>
					</div>

				</div> 
			</div> 
		</div>  
		
		<div id="ft"><!-- footer -->


		</div>  
	</div>

</body>
</html>
