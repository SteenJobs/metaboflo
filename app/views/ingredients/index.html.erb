<h1>Listing ingredients</h1>

<table class="list">
  <tr>
    <th>Name</th>
		<th colspan="3">Actions</th>
  </tr>

<% for ingredient in @ingredients %>
  <tr>
    <td><%=h ingredient.name %></td>
    <td><%= show_link ingredient %></td>
    <td><%= edit_link edit_ingredient_path(ingredient) %></td>
    <td><%= destroy_link ingredient %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ingredient', new_ingredient_path %>
