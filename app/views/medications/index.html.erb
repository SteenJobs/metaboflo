<h1>Listing Medications for Animal '<%= @animal.code %>'</h1>

<table class="list">
	<tr>
		<th>Drug</th>
		<th>Started on</th>
		<th>Stopped on</th>
		<th>Currently taking</th>
		<th>Drugbank reference</th>
		<th colspan="3">Actions</th>
	</tr>

	<% for medication in @medications %>
	<tr class="<%= cycle('odd', 'even') %>">
		<td><%=h medication.drug %></td>
		<td><%=h medication.started_on %></td>
		<td><%=h medication.stopped_on %></td>
		<td><%=h boolean_to_english(medication.currently_taking) %></td>
		<td><%=h medication.drugbank_reference %></td>
		<td><%= show_link animal_medication_path(@animal, medication) %></td>
		<td><%= edit_link edit_animal_medication_path(@animal, medication) %></td>
		<td><%= destroy_link animal_medication_path(@animal, medication) %></td>
	</tr>
	<% end %>
</table>

<br />

<%= new_link 'medication', new_animal_medication_path(@animal) %>
