<h1>Listing Medications for Patient '<%= @patient.code %>'</h1>

<table>
	<tr>
		<th>Drug</th>
		<th>Started on</th>
		<th>Stopped on</th>
		<th>Currently taking</th>
		<th>Drugbank reference</th>
		<th colspan="3">Actions</th>
	</tr>

	<% for medication in @medications %>
	<tr class="<%= cycle('odd', 'even') %>">
		<td><%=h medication.drug %></td>
		<td><%=h medication.started_on %></td>
		<td><%=h medication.stopped_on %></td>
		<td><%=h boolean_to_english(medication.currently_taking) %></td>
		<td><%=h medication.drugbank_reference %></td>
		<td><%= link_to 'Show', patient_medication_path(@patient, medication) %></td>
		<td><%= link_to 'Edit', edit_patient_medication_path(@patient, medication) %></td>
		<td><%= link_to 'Destroy', patient_medication_path(@patient, medication), :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>
</table>

<br />

<%= link_to 'New medication', new_patient_medication_path(@patient) %>
