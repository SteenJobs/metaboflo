<h1>Editing experiment</h1>

<% form_for([@sample, @experiment]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :performed_on %><br />
    <%= f.date_select :performed_on %>
  </p>
  <p>
    <%= f.label :performed_by %><br />
    <%= f.text_field :performed_by %>
  </p>
  <p>
    <%= f.label :amount_used %><br />
    <%= f.text_field :amount_used %>
  </p>
  <p>
    <%= f.label :amount_used_unit %><br />
    <%= f.text_field :amount_used_unit %>
  </p>
  <p>
    <%= f.label :protocol %><br />
    <%= f.select :protocol_id, Protocol.all.collect {|p| [ p.name, p.id ] }, { :include_blank => true } %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', [@sample, @experiment] %> |
<%= link_to 'Back to Experiments', experiments_path %>
