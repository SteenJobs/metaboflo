<h1><%= @sample.blank? ? 'Experiments' : "Experiments for sample #{@sample}" %></h1>

<table class="list">
  <tr>
    <th>Test Subject</th>
    <th>Sample</th>
    <th>Title</th>
    <th>Type</th>
    <th>Description</th>
    <th>To be analyzed by</th>
    <th>To be analyzed on</th>
    <th>Actually analyzed by</th>
    <th>Actually analyzed on</th>
    <th>Data Files</th>
    <th colspan="3">Actions</th>
  </tr>

  <% for experiment in @experiments %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%= experiment.sample.root %></td>
    <td><%= experiment.sample %></td>
    <td><%=h experiment.name %></td>
    <td><%=h experiment.experiment_type.name %></td>
    <td><%=h experiment.short_description %></td>
    <td><%=h experiment.assigned_to %></td>
    <td><%=h experiment.perform_on %></td>
    <td><%=h experiment.performed_by %></td>
    <td><%=h experiment.performed_on %></td>
    <td>
      <% if experiment.data_files.length > 0 %>
        <ul>
          <% for data_file in experiment.data_files %>
          	<li><%= link_to h(data_file.filename), data_file.public_filename %></li>
          <% end %>
        </ul>
      <% else %>
      -
      <% end %>
    </td>
    <td><%= show_link [experiment.sample, experiment] %></td>
    <td><%= edit_link edit_sample_experiment_path(experiment.sample, experiment) %></td>
    <td><%= destroy_link [experiment.sample, experiment] %></td>
  </tr>
  <% end %>
</table>

<br />

<% if !@sample.blank? %>
<%= new_link 'experiment for this sample', new_sample_experiment_path(@sample) %>
<% end %>