<h1>Studies</h1>

<p class="info"><%= render :partial => "info" %></p>

<br />

<table class="list">
  <tr class="header">
    <th>Name</th>
    <th>Description</th>
		<th>Cohorts</th>
		<th colspan="3">Actions</th>
  </tr>

<% @studies.each do |study| %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%= study.name %></td>
    <td><%= short_description(study.description) %></td>
  	<td><%= study.cohorts.count %></td>
  	<td><%= show_link({:action => 'show', :id => study}, 'show/analyze') %></td>
  	<td><%= edit_link({:action => 'edit', :id => study}) %></td>
  	<td><%= destroy_link({:action => 'destroy', :id => study}) %></td>
  </tr>
<% end %>
</table>

<br />

<%= new_link("Study", {:action => 'new'}) %>