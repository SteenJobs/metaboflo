<% content_for :javascript do %>
	<%= javascript_include_tag 'sample_manifest_show' %>
<% end %>

<% if @sample_manifest.biofluid_sample_manifests.exists? %>
  <h1>Blood/Urine Samples</h1>
  <table class="list">
  	<tr>
  		<th>Tube ID</th>
  		<th>Barcode</th>
  		<th>Species</th>
  		<th>Matrix</th>
  		<th>Group ID</th>
  		<th>Sample Volume</th>
  		<th>Test Codes</th>
  	</tr>
  	<% @sample_manifest.biofluid_sample_manifests.each do |s|%>
    	<tr>
    		<td><%= s.tube_id %></td>
    		<td><%= s.barcode %></td>
    		<td><%= s.species %></td>
    		<td><%= s.matrix %></td>
    		<td><%= s.group_id %></td>
    		<td><%= s.sample_volume %></td>
    		<td><%= SampleManifest.module_codes(s).present? ? SampleManifest.module_codes(s).join(", ") : 'none' %></td>
    	</tr>
    <% end %>
  </table>
<% end %>

