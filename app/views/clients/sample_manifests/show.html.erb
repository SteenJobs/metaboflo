<% content_for :javascript do %>
	<%= javascript_include_tag 'sample_manifest_show' %>
<% end %>
<% if @sample_manifest.biofluid_sample_manifests.present?%>
<h1>Blood/Urine Samples</h1>
<table class="list">
	<tr>
		<th>Tube ID</th>
		<th>Barcode</th>
		<th>Species</th>
		<th>Matrix</th>
		<th>Group ID</th>
		<th>Sample Volume</th>
		<th>Test Codes</th>
	</tr>
	<% @sample_manifest.biofluid_sample_manifests.each do |s|%>
	<tr>
		<td><%=s.tube_id%></td>
		<td><%=s.barcode%></td>
		<td><%=s.species%></td>
		<td><%=s.matrix%></td>
		<td><%=s.group_id%></td>
		<td><%=s.sample_volume%></td>
		<td>
			<table>
				<tr><td><%= "MP\#1" if s.module_1%></td>
					<td><%= "MP\#2" if s.module_2%></td>
					<td><%= "MP\#3" if s.module_3%></td>
					<td><%= "MP\#4" if s.module_4%></td>
					<td><%= "MP\#5" if s.module_5%></td>
					<td><%= "GC-FAP" if s.gc_fap%></td>
					<td><%= "SS\#1" if s.ss_1%></td>
					<td><%= "SS\#1" if s.ss_2%></td>
				</tr>
			</table>
		</td>
	</tr>
	<%end%>
	
</table>
<%end%>
