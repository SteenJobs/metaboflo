<h1>Editing Sample</h1>

<% form_for([@patient, @sample]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :unit %><br />
    <%= f.select :unit, ['ml', 'g'], :include_blank => true %>
  </p>
  <p>
    <%= f.label :barcode %><br />
    <%= f.text_field :barcode %>
  </p>
  <p>
    <%= f.label :taken_on %><br />
    <%= f.date_select :taken_on %>
  </p>
  <p>
    <%= f.label :taken_by %><br />
    <%= f.text_field :taken_by %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<br />

<%= link_to 'Show', patient_sample_path(@sample.patient, @sample) %>