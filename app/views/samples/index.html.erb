<h1>Listing samples</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Barcode</th>
    <th>Patient</th>
    <th>Taken on</th>
    <th>Taken by</th>
  </tr>

<% for sample in @samples %>
  <tr>
    <td><%=h sample.amount %> <%=h sample.unit %></td>
    <td><%=h sample.barcode %></td>
    <td><%=h sample.patient_id %></td>
    <td><%=h sample.taken_on %></td>
    <td><%=h sample.taken_by %></td>
    <td><%= link_to 'Show', sample %></td>
    <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
    <td><%= link_to 'Destroy', sample, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% unless @patient.nil? %>
<%= link_to "New sample for patient #{@patient.code}", new_patient_sample_path(@patient) %>
<% end %>
