<h1>Showing <%= humanized_type(@type).downcase %> cohort "<%=h @cohort.name %>"</h1>

<p>
	<b>Name:</b>
	<%=h @cohort.name %>
</p>

<p>
	<b>Description:</b>
	<%=h @cohort.description %>
</p>

<h2><%= @cohort.assignables.length %> <%= humanized_type(@type).pluralize %> in this cohort:</h2>

<div class="association">
	<table class="list">
		<thead>
			<tr>
				<th><%= humanized_type(@type) %></th>
				<th>Remove</th>		
			</tr>
		</thead>
		<tbody id="assignable-associations">
			<%= render :partial => '/cohort_assignments/cohort_assignment', :collection => @cohort.cohort_assignments, :locals => { :from => 'cohort' } %>
		</tbody>
	</table>
	<br />
	<div class="new-association">
		<%= render :partial => '/cohort_assignments/add_assignable_form', :locals => { :from => 'cohort' } %>
	</div>
	<br />
</div>

<%= edit_link({:action => 'edit', :type => @type}) %>