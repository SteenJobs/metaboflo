<h1>New <%= @type %> cohort</h1>

<% form_for :cohort, @cohort, :url => { :action => "create", :type => @type } do |f| %>
  <%= f.error_messages %>

	<p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>