<h1><%= humanized_type @type %> Cohorts</h1>

<div class="submenu" style="margin: 1em 0em">
	<% Cohort.valid_types.each do |cohort_type| %>
	<%= link_to "#{humanized_type cohort_type} Cohorts", :type => cohort_type %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<% end %>
</div>

<table class="list">
  <tr>
    <th>Name</th>
    <th>Description</th>
		<th>Size</th>
		<th colspan="3">Actions</th>
  </tr>

<% for cohort in @cohorts %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%=h cohort.name %></td>
    <td><%=h cohort.description %></td>
	<td><%=h cohort.assignables.count %></td>
	<td><%= show_link({:action => 'show', :id => cohort, :type => @type}) %></td>
	<td><%= edit_link({:action => 'edit', :id => cohort, :type => @type}) %></td>
	<td><%= destroy_link({:action => 'destroy', :id => cohort, :type => @type}) %></td>
  </tr>
<% end %>
</table>

<br />

<%= new_link("#{humanized_type(@type).downcase} cohort", {:action => 'new', :type => @type}) %>