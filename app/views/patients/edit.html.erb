<h1>Editing Patient <%=@patient.code%></h1>

<% form_for(@patient) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :middle_name %><br />
    <%= f.text_field :middle_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :birthdate %><br />
    <%= f.date_select :birthdate, :order => [:day, :month, :year] %>
  </p>
  <p>
    <%= f.label :gender %><br />
    <%= f.select :gender, ['Male', 'Female'], :include_blank => true %>
  </p>
  <p>
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </p>
  <p>
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </p>
  <br />
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<br />

<%= link_to 'Show', @patient %> |
<%= link_to 'Back to all patients', patients_path %>
