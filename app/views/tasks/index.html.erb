<h1>Listing tasks</h1>

<table class="list">
  <tr>
    <th>Subject</th>
    <th>Description</th>
    <th>Status</th>
    <th>Priority</th>
    <th>Assigned to</th>
    <th>Category</th>
    <th>Start date</th>
    <th>Due date</th>
    <th>Estimated hours</th>
    <th>% done</th>
		<th colspan="3">Actions</th>
  </tr>

<% for task in @tasks %>
	<tr class="<%= cycle('odd', 'even') %>">
    <td><%=h task.subject %></td>
    <td><%=h truncate(task.description) %></td>
    <td><%=h task.status.name if task.status %></td>
    <td><%=h task.priority.name if task.priority %></td>
    <td><%=h task.assigned_to.login if task.assigned_to %></td>
    <td><%=h task.category.name if task.category %></td>
    <td><%=h task.start_date %></td>
    <td><%=h task.due_date %></td>
    <td><%=h task.estimated_hours %></td>
    <td><%=h task.done_ratio %></td>
	<td><%= show_link task %></td>
	<td><%= edit_link edit_task_path(task) %></td>
	<td><%= destroy_link task %></td>
  </tr>
<% end %>
</table>

<br />

<%= new_link("task", new_task_path) %> | 
<%= link_to 'Gantt', gantt_tasks_path, :class => 'icon icon-report' %> | 
<%= link_to 'Calendar', calendar_tasks_path, :class => 'icon icon-calendar' %>

