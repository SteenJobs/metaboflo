<h1>Test Subjects</h1>

<table class="list">
	<tr>
		<th>Code</th>
		<th>Birthdate</th>
		<th>Number of Samples</th>
		<th colspan="3">Actions</th>
	</tr>

	<% for test_subject in @test_subjects %>
	<tr class="<%= cycle('odd', 'even') %>">
		<td><%=h test_subject.code %></td>
		<td><%=h test_subject.birthdate %></td>
		<td><%= test_subject.samples.length %> (<%= link_to 'display', test_subject_samples_path(test_subject) %>)</td>
		<td><%= show_link test_subject %></td>
		<td><%= edit_link edit_test_subject_path(test_subject) %></td>
		<td><%= destroy_link test_subject %></td>
	</tr>
	<% end %>
</table>
<br />

<%= new_link 'test_subject', new_test_subject_path %>
