<h1>Editing <%= humanized_type @type %> group</h1>

<%= knoxy_form_for( @grouping, :as => :grouping, :url => { :action => "update", :type => @type }, 
                    :html => { :method => :put } ) do |form| %>
  <%= render :partial => 'form', :locals => { :f => form } %>

  <div class="field-no-label actions">
    <%= form.submit 'Update' %>
  </div>
<% end %>

<%= show_link({:id => @grouping, :type => @type}) %>